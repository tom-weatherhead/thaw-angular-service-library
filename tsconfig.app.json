{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"outDir": "./out-tsc/app",
		"target": "es2015"
	},
	"files": [
		"src/main.ts",
		"src/polyfills.ts"
	],
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/test.ts",
		"src/**/*.spec.ts",
		"src/app/app-routing.module.ts",
		"src/environments/environment.prod.ts"
	]
}
